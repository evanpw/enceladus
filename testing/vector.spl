import Vector

# Int vector
v := vector()

for i = 1 to 10
    v.pushBack(i)

drop $ v.popBack()
drop $ v.popBack()

total := 0
for i = 0 to v.size - 1
    total += v[i]

# Boolean vector
v2 := vector()
v2.pushBack(True)
v2.pushBack(False)

if v2[0]
    total += 1

print $ show(total)

