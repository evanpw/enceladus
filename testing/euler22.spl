# Solves Project Euler #22

import List
import String

def readNames() -> [String]
    line := readLine

    pieces := splitBy ',' $ unwrap line

    result := []
    for piece in pieces
        result = (trimChar '"' piece) :: result

    return result

def score(name: String) -> Int
    total := 0
    for i = 0 to strLength name - 1
        c := strAt name i
        total += (c - 'A') + 1

    return total

names := readNames
names = sort cmpString names

total := 0
for i = 1 to length names
    name := at (i - 1) names

    total += i * score name

print $ show total
