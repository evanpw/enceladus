## Show trait ##
trait Show
    def show(self) -> String

impl Show for T: Num
    def show(self) -> String
        digits := Vector::new()

        plusx := self as UInt
        negative := False
        if self < 0
            plusx = -self as UInt
            negative = True

        while plusx != 0
            digits.append((plusx % 10) as Char + '0')
            plusx /= 10

        if digits.length() == 0
            return "0"
        else
            if negative
                digits.append('-')

            digits.reverse()
            return digits.toArray()

impl Show for Char
    def show(self) -> String
        return Array::make(1, self)

impl Show for Unit
    def show(self) -> String
        return "()"

def show(x: T) -> String where T: Show
    return x.show()


