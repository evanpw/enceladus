## Ord trait ##
data Ordering = Less | Equal | Greater

trait Ord
    def cmp(self: Self, other: Self) -> Ordering

impl Ord for T where T: Num
    def cmp(self: T, other: T) -> Ordering
        if self < other
            return Less
        elif self > other
            return Greater
        else
            return Equal

impl Ord for [T] where T: Ord
    def cmp(self: [T], other: [T]) -> Ordering
        if self.empty()
            if other.empty()
                return Equal
            else
                return Less
        elif other.empty()
            return Greater
        else
            match self.head().cmp(other.head())
                Less
                    return Less
                Greater
                    return Greater
                Equal
                    return self.tail().cmp(other.tail())

impl Ord for String
    def cmp(self: String, other: String) -> Ordering
        n1 := self.length()
        n2 := other.length()

        for n in range(0, min(n1, n2) + 1)
            if self.length() <= n
                if other.length() <= n
                    return Equal
                else
                    return Less
            elif other.length() <= n
                return Greater
            else
                if self.at(n) < other.at(n)
                    return Less
                elif self.at(n) > other.at(n)
                    return Greater

        panic $ "Unreachable"


## PartialOrd trait ##
trait PartialOrd
    def lt(self: Self, other: Self) -> Bool
    def le(self: Self, other: Self) -> Bool
    def gt(self: Self, other: Self) -> Bool
    def ge(self: Self, other: Self) -> Bool

impl PartialOrd for T where T: Ord
    def lt(self: T, other: T) -> Bool
        match self.cmp(other)
            Less
                return True
            Equal
                return False
            Greater
                return False

    def le(self: T, other: T) -> Bool
        match self.cmp(other)
            Less
                return True
            Equal
                return True
            Greater
                return False

    def gt(self: T, other: T) -> Bool
        match self.cmp(other)
            Less
                return False
            Equal
                return False
            Greater
                return True

    def ge(self: T, other: T) -> Bool
        match self.cmp(other)
            Less
                return False
            Equal
                return True
            Greater
                return True


